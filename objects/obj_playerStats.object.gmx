        // Draw hearts (maxHp)
        for(var i = 0; i &lt; maxHp; i++) {
            draw_sprite_ext(spr_heart, 0, 24+i*36, 20, 1, 1, 0, c_black, .5);
        }
        
        // Draw hearts (hp)
        for(var i = 0; i &lt; hp; i++) {
            draw_sprite_ext(spr_heart, 0, 24+i*36, 20, 1, 1, 0, c_white, 1);
